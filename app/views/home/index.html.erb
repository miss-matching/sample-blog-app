<h1>Hello, Rails!</h1>
<% if flash[:error] %>
  <p class="error">
    <%= flash[:error] %>
  </p>
<% end %>

<% if flash[:notice] %>
  <p class="notice">
    <%= flash[:notice] %>
  </p>
<% end %>

<%= form_tag(logins_path) do %>
  <div class="field">
    <%= label_tag :username %><br />
    <%= text_field_tag :username %>
  </div>
  <div class="field">
    <%= label_tag :password %><br />
    <%= password_field_tag :password %>
  </div>
  <div class="actions">
    <%= submit_tag 'Sign in' %>
  </div>
<% end %>

<%= link_to 'Sign up', new_user_path %>
